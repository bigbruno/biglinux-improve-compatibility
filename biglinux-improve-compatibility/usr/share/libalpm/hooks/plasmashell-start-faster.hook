[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Target = biglinux-improve-compatibility
Target = plasma-workspace

[Action]
Description = Start plasmashell faster
When = PostTransaction
Exec = /bin/sh -c '[[ -e /usr/lib/systemd/user/plasma-kcminit.service ]] && sed -i "s|Type=forking|Type=simple|g" /usr/lib/systemd/user/plasma-kcminit.service'
